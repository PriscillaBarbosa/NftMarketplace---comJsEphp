{
    "name": "priscilla/nft-marketplace",
    "description": "Marketplace de NFTs",
    "type": "project",
    "License": "MIT",
    "authors": [
        {
            "name": "Priscilla Barbosa de Oliveira",
            "email": "priscillabarbosa2014@gmail.com"
            }
    ],
    "require": { 
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.0",
        "phpmailer/phpmailer": "^6.0",
        "firebase/jwt": "^6.0",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },

    "autoload": { 
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    }
}